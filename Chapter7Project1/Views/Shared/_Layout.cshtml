@{
    string a = ViewContext.RouteData?.Values["action"]?.ToString() ?? "";
    string c = ViewContext.RouteData?.Values["controller"]?.ToString() ?? "";
    string ar = ViewContext.RouteData?.Values["area"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<div class="container">
    
    <nav class="navbar navbar-expand-md navbar-dark bg-dark p-3 mb-4">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">My Website</a>
        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="False"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <nav class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="navbar-nav me-auto">
                <a class="nav-item nav-link @(a == "Index" && ar == "" ? "active" : "")" asp-controller="Home" asp-action="Index" asp-area="">Home</a>
                <a class="nav-item nav-link @(a == "Index" && ar == "" ? "active" : "")" asp-controller="Home" asp-action="About" asp-area="">About</a>
                <a class="nav-item nav-link @(a == "Index" && ar == "" ? "active" : "")" asp-controller="Home" asp-action="Contact" asp-area="">Contact Us</a>
            </div>
            <div class="navbar-nav ms-auto">
                <a class="nav-item nav-link @(ar == "Help" ? "active" : "")" asp-action="Index" asp-controller="Home" asp-area="Help" >Help</a> 
            </div>
        </nav>
    </nav>
    
    <header class="mb-2">
        @RenderSection("header")
    </header>
    
    <main role="main">
        @RenderBody()
    </main>
</div>
</body>
</html>